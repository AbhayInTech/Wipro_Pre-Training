@*
    _Layout.cshtml is the shared layout for all Razor Pages.
    Here we add navigation links for better usability.
*@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorPagesAssignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Razor Pages App</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Default Pages -->
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Privacy">Privacy</a>
                        </li>

                        <!-- Assignment Pages -->
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Items/List">Item List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Items/Add">Add Item</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-3">
        <div class="container">
            &copy; @DateTime.Now.Year - RazorPagesAssignment
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
