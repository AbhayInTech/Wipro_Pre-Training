@page
@model RazorPagesAssignment.Pages.Items.AddModel
@{
    ViewData["Title"] = "Add Item";
}

<h2>Add a New Item</h2>

<!-- Validation summary to display errors -->
<partial name="_ValidationScriptsPartial" />

<form method="post">
    <div>
        <label asp-for="NewItem"></label>
        <input asp-for="NewItem" />
        <span asp-validation-for="NewItem" style="color:red"></span>
    </div>
    <br />
    <button type="submit">Add</button>
</form>

<p>
    <a asp-page="/Items/List">Back to List</a>
</p>
