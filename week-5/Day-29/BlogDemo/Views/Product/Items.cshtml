@model BlogDemo.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">Added on @Model.CreatedAt.ToString("dd MMM yyyy")</p>
            <h4 class="text-success">â‚¹@Model.Price.ToString("N2")</h4>
            <p>@Model.Description</p>

            <button class="btn btn-primary mt-3">Buy Now</button>
            @* <button class="btn btn-outline-secondary mt-3 ms-2">Add to Wishlist</button> *@
        </div>
    </div>
</div>
